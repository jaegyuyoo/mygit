/* 231030
예금액, 연이율을 입력받아 2년간 복리이자 계산 
*/

import java.util.Scanner;

public class InterestCalculation {

	public static void main(String[] args) {

		Scanner input = new Scanner(System.in);
		
		double deposit; // 예금 변수
		double annualInterestRate; // 연이율 변수
		double interest; // 2년간 이자
		double total; // 예금 + 이자 
		
		System.out.println("예금액, 연이율을 입력받아 2년간 복리이자 계산"); // 제목
		System.out.println();

		System.out.println("예금액을 입력하세요 : ");
		deposit = input.nextDouble();
		
		System.out.println("연이율을 입력하세요(단위 퍼센트) : ");
		annualInterestRate = input.nextDouble();
		
		interest = ( deposit * annualInterestRate ) * annualInterestRate
		
		System.out.println("2년 후의 예금액 : ");
		total = input.nextDouble();
		
		
		
		
	}

}
