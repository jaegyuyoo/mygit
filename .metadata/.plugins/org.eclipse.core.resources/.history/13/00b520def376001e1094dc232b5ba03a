		int calculate_minites; // 분 합계
		int calculate_total; // 시간(초 변환), 분(초 변환), 초 합계

		System.out.println("시, 분, 초 입력받아 '초'로 계산"); // 제목
		System.out.println();

		System.err.println("시간을 입력해주세요 : ");
		hours = input.nextInt();

